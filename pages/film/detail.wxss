/* pages/film/detail.wxss */
.detail-container{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  padding: 8px;
  background-repeat: no-repeat;
}
image{
  max-width: 100%;
  margin: 8px 0;
  max-height: 180px;
}
.bg {
    height:180px;
    text-align: center;
}
.bg-blur {
    float: left;
    width: 100%;
    background-repeat: no-repeat;
    background-position: center;
    background-size: cover;
    -webkit-filter: blur(15px);
    -moz-filter: blur(15px);
    -o-filter: blur(15px);
    -ms-filter: blur(15px);
    filter: blur(15px);
}
.detail-top{
  position:absolute;
  padding: 8px 15px;
  top: 0px;
  left:0px;
  color: #fff;
}
.detail-left{
  width: 40%;
  float: left;
}
.detail-right{
  width: 60%;
  float: right;
}
.detail-right .detail-desc-container{
  margin: 8px;
  font-size: 14px;
}
.detail-right .detail-desc-container .detail-title{
  display: block;
  width: 100%;
  font-weight: bold;
  font-size: 12px;
}
.detail-ratings{
  margin: 8px 0;
}
.detail-ratings view{
  display: inline-block;
  width: 100%;
}
.detail-ratings view text{
  display: inline-block;
  width: 100%;
  margin: 4px 0;
}

.detail-genres{
  margin: 8px 0;
}
.detail-desc{
  font-size: 12px;
  line-height: 24px;
  color: #888;
  margin: 8px auto;
  margin-top: 25px;
  max-height: 100px;
  border-bottom: 2px solid #2277aa
}
.detail-desc view{
  margin: 8px;
  max-height: 100px;
  overflow: hidden;
}
.detail-desc text{
  display: block;
  width: 100%;
}
.section{
  display: flex;
  width: 100%;
  margin: 8px 0;
  border-top: 2px solid #2277aa;
  border-bottom: 2px solid #2277aa;
}
.scroll-view_H{
  white-space: nowrap;
}
.scroll-view-item{
  height: 80px;
  margin: 8px;
}
.scroll-view-item image{
  height: 80px;
  width:80px;
  border-radius: 5px;
  margin: 0 auto;
}
.scroll-view-item text{
  display: block;
  width:80px;
  overflow-x: hidden;
  font-size: 12px;
  text-align: center
}
.scroll-view-item_H{
  display: inline-block;
  width: 80px;
  height: 100px;
}